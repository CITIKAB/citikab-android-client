<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.trioangle.gofer.sidebar.payment.AddWalletActivity">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/header_color">


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/gobackleftarrowwrite" />


        <com.trioangle.gofer.custompalette.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/arrow"
            android:text="@string/wallet"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:fontName="@string/font_UBERNews" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/wallet_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/wallet" />

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/fontTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wallet_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/wallet_amount"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            app:fontName="@string/font_UBERNews" />

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/wallet_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fontTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="$150"
            android:textColor="@color/text_black"
            android:textSize="25dp"
            app:fontName="@string/font_UBERNews" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.trioangle.gofer.custompalette.FontButton
            android:id="@+id/add_amount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/button_color"
            android:text="@string/add_amount"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontName="@string/font_UBERNews" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layoutDirection="@string/layout_direction"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/socialback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="20dp"
            android:background="@drawable/gobackleftarrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/social"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionName="social"
        android:weightSum="1">

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/chooseaccount"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:transitionName="mobilenumber"
            app:fontName="@string/font_UBERBook" />

        <RelativeLayout
            android:id="@+id/facebooklogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/fbimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook" />

            <com.trioangle.gofer.custompalette.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/fbimage"
                android:paddingStart="30dp"
                android:text="@string/facebook"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                app:fontName="@string/font_UBERNews" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/googlelogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/gpimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/google" />

            <com.trioangle.gofer.custompalette.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/gpimage"
                android:paddingStart="30dp"
                android:text="@string/google"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                app:fontName="@string/font_UBERNews" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

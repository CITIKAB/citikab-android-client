<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.trioangle.gofer.sendrequest.PaymentAmountPage">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/header_color">

        <ImageView

            android:id="@+id/insurance_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:scaleX=".6"
            android:scaleY=".6"
            android:src="@drawable/gobackleftarrow"
            android:tint="@color/white" />

        <com.trioangle.gofer.custompalette.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/paymentdetails"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontName="@string/font_UBERBook" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back">

            <RelativeLayout
                android:id="@+id/basrfarelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/faretxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="@string/baseFare"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/faretxt"
                    android:paddingStart="5dp"
                    android:text="w"
                    android:textAlignment="center"
                    android:textColor="@color/switch_thumb_normal_material_dark"
                    android:textSize="18sp"
                    app:fontName="@string/font_UberClone" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/basefare_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="20dp"
                    android:text="100"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/distancelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/basrfarelayout"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="@string/distancefare"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/distance_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="20dp"
                    android:text="200"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/timefarelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distancelayout"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="@string/timefare"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/time_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="20dp"
                    android:text="300"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/accesslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timefarelayout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uberfee"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="400"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERNews" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/totalamountlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accesslayout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_buttomtopboarder"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/total_payouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimatedpayout"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_payouts"
                    android:layout_marginTop="3dp"
                    android:text="*Rounded"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:fontName="@string/font_UBERBook" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/totalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="500"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/walletamountlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalamountlayout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/walletamount"
                    android:text="@string/wallet_amounts"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/walletamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="- $500"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/promoamountlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/walletamountlayout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/walletamount"
                    android:text="@string/promo_amounts"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/promoamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="- $500"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/payableamountlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/promoamountlayout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_buttomtopboarder"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.gofer.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/payableamount"
                    android:text="@string/payable_amount"
                    android:textColor="@color/green_text_color"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

                <com.trioangle.gofer.custompalette.FontTextView
                    android:id="@+id/payableamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="500"
                    android:textColor="@color/green_text_color"
                    android:textSize="18sp"
                    app:fontName="@string/font_UBERMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payableamountlayout"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <com.trioangle.gofer.custompalette.FontButton
                    android:id="@+id/rate_submit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="#000000"
                    android:text="Pay"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:fontName="@string/font_UBERNews" />
            </RelativeLayout>


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rvPrice"
                android:layout_height="wrap_content">
                <com.trioangle.gofer.custompalette.FontButton
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_below="@+id/rvPrice"
                    android:background="@color/button_color"
                    android:text="Pay"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:fontName="@string/font_UBERNews" />
            </RelativeLayout>


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll"
        android:background="@color/white"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.trioangle.gofer.custompalette.FontButton
            android:id="@+id/rate_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="#000000"
            android:text="Payee"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontName="@string/font_UBERNews" />
    </RelativeLayout>


</RelativeLayout>
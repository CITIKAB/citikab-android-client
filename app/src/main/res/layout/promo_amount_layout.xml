<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/d_buttomboarder"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp">

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/promo_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/d_green_fillboarder"
            android:padding="5dp"
            android:text="@string/off"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:fontName="@string/font_UBERBook" />

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/promo_amt_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promo_amount"
            android:layout_marginTop="20dp"
            android:text="Free trip up to $25 from tes"
            android:textColor="@color/text_black"
            android:textSize="12dp"
            app:fontName="@string/font_UBERMedium" />

        <com.trioangle.gofer.custompalette.FontTextView
            android:id="@+id/promo_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Jan 15, 2018"
            android:textColor="@color/textgray"
            android:textSize="10dp"
            app:fontName="@string/font_UBERBook" />
    </RelativeLayout>

</RelativeLayout>





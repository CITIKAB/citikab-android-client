<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/enter_promo_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_promo_code"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            app:fontName="@string/font_UBERNews" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_promo_code"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.trioangle.gofer.custompalette.FontButton
            android:id="@+id/cancel_promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontName="@string/font_UBERNews" />

        <com.trioangle.gofer.custompalette.FontButton
            android:id="@+id/add_promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontName="@string/font_UBERNews" />
    </LinearLayout>
</RelativeLayout>